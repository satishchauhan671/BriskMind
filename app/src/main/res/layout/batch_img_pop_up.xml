<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/batchImgCard"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="@dimen/activity_margin_5dp"
    app:cardElevation="@dimen/activity_margin_5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/activity_margin_10dp"
        android:paddingTop="@dimen/activity_margin_8dp"
        android:paddingEnd="@dimen/activity_margin_10dp"
        android:paddingBottom="@dimen/activity_margin_8dp">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_margin_10dp"
        android:text="@string/batch_image"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_12sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
