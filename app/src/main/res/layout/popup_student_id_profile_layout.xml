<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#5E3E3C3A"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:background="#fff"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_margin_20dp"
                        android:layout_marginEnd="@dimen/activity_margin_20dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/text_size_12sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/student_id_image"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:textSize="@dimen/text_size_12sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/student_profile_image"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/activity_margin_5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/firstmeterimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/cameraimgbackground"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/meterimageoriginal1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/meterimage1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_camera_new" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/activity_margin_5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/secondmeterimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/cameraimgbackground"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/meterimageoriginal2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/meterimage2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_camera_new" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/text_size_12sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/tap_launch_camera"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:textSize="@dimen/text_size_12sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/tap_launch_camera"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_50dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:textSize="24dp"
                                    android:gravity="center"
                                    android:text="@string/submit_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:visibility="gone"
                                    android:padding="@dimen/activity_margin_10dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:textSize="@dimen/text_size_14sp"
                                    android:gravity="center"
                                    android:text="@string/inform_verify"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:id="@+id/button_login"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="@dimen/activity_margin_20dp"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:background="@drawable/rounded_btn"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/txtLogin"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:paddingStart="16dp"
                                        android:text="@string/savenext"
                                        android:textAllCaps="true"
                                        android:textColor="@color/blue"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />



                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/btnSaveNext"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/activity_margin_40dp"
                                    android:background="@drawable/btn_bg_rounded"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="@dimen/activity_margin_20dp"
                                    android:layout_marginStart="@dimen/activity_margin_50dp"
                                    android:layout_marginEnd="@dimen/activity_margin_50dp"
                                    android:weightSum="1">

                                    <TextView
                                        android:layout_width="356dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:paddingStart="16dp"
                                        android:text="@string/savenext"
                                        android:textAllCaps="true"
                                        android:textColor="@color/white"
                                        android:textSize="13sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>






                </LinearLayout>
            </ScrollView>




        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
