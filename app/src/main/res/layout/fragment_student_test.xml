<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/batch_view_color"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/main_appbar"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/main_collapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary">

            <View
                android:id="@+id/main_imageview_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/batch_back_color"
                app:layout_collapseParallaxMultiplier="0.2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_framelayout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/student_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/roboto_regular_font"
                    android:text="@string/student_name_txt"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toTopOf="0" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_medium_font"
                    android:lines="1"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/student_name_txt" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/student_enrollment_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/roboto_regular_font"
                    android:text="@string/enroll"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/student_enroll"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/txt_student_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/student_enroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/roboto_medium_font"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="0"
                    app:layout_constraintStart_toStartOf="0"
                    app:layout_constraintTop_toBottomOf="@+id/student_enrollment_txt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:gravity="center"
                android:visibility="invisible"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:theme="@style/AppTheme.PopupOverlay"
                app:title="">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/back_arrow"
                        android:layout_width="50sp"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/back_arrow" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15sp"
                        android:layout_toEndOf="@+id/back_arrow"
                        android:fontFamily="@font/roboto_medium_font"
                        android:text="@string/app_name"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/menu_dot"
                        android:tint="@color/colorWhite" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_overlapTop="25dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/batchlist_data">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/test_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/roboto_medium_font"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/test_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_name"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular_font"
                    android:text="@string/test_status_txt"
                    android:textColor="@color/date"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/test_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_name"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/test_status_txt"
                    android:fontFamily="@font/roboto_medium_font"
                    android:text="@string/starttest"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/start_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_status_txt"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/sign_fill_border"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/starttest"
                    android:textColor="@color/colorWhite" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_testSyncNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/start_test"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/roboto_regular_font"
                    android:text="@string/syncMessageNote"
                    android:textColor="@color/assessor_txt_color"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_practicalTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/batchlist_data"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/test_namePract"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="20sp"
                    android:fontFamily="@font/roboto_medium_font"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_testStatusPractTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_namePract"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/roboto_regular_font"
                    android:text="@string/practical_test_status"
                    android:textColor="@color/date"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_testStatusPractValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_namePract"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@+id/txt_testStatusPractTitle"
                    android:fontFamily="@font/roboto_medium_font"
                    android:text="@string/starttest"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_startTestPractical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_testStatusPractValue"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/sign_greenfill_border"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/starttest"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
