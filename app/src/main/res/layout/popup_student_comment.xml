<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4DD6D6D6"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        app:contentPaddingTop="@dimen/activity_margin_20dp"
        app:contentPaddingBottom="@dimen/activity_margin_10dp"
        app:cardCornerRadius="@dimen/activity_margin_20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_margin_250dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytEame"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_20dp"
                android:layout_weight="1"
                android:background="@drawable/layout_nonselected"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_3dp"
                    android:paddingStart="@dimen/activity_margin_5dp"
                    android:paddingTop="@dimen/activity_margin_5dp"
                    android:text="@string/comment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_11sp" />

                <EditText
                    android:id="@+id/txtRemarkFault"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/activity_margin_3dp"
                    android:background="@null"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                    android:gravity="start|center"
                    android:hint="Type Here..."
                    android:imeOptions="actionDone"
                    android:inputType="textCapSentences"
                    android:maxLength="100"
                    android:maxLines="1"
                    android:paddingStart="@dimen/activity_margin_5dp"
                    android:paddingTop="@dimen/activity_margin_3dp"
                    android:paddingEnd="@dimen/activity_margin_5dp"
                    android:paddingBottom="@dimen/activity_margin_5dp"
                    android:singleLine="true"
                    android:textColor="@color/color_272F38"
                    android:textColorHint="@color/color_747474"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/text_size_13sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginStart="@dimen/activity_margin_15dp"
                android:layout_marginEnd="@dimen/activity_margin_15dp"
                android:layout_marginBottom="@dimen/activity_margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnSubmitFaultyMeter"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/activity_margin_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg_rounded"
                    android:gravity="center"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/btnCancelPopup"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/activity_margin_10dp"
                    android:layout_height="@dimen/activity_margin_40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_bg_rounded"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>