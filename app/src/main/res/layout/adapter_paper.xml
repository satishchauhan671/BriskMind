<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/activity_margin_10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/queMarksTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_margin_12dp"
            android:layout_gravity="end"
            android:lineSpacingMultiplier="1.2"/>

        <TextView
            android:id="@+id/subQuestionTv"
            android:layout_toLeftOf="@+id/queMarksTv"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/activity_margin_12dp"
            android:lineSpacingMultiplier="1.2"/>

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/activity_margin_15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"/>


        </LinearLayout>

</LinearLayout>