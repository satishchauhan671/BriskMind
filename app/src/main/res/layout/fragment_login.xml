<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_root">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/splash" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sign_in_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12sp"
        android:text="@string/appbar_scrolling_view_behavior"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sign_student"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/sign_in_account"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30sp"
        android:fontFamily="@font/roboto_bold_font"
        android:background="@drawable/sign_in_border"
        android:gravity="center"
        android:text="@string/sign_in_student"
        android:textColor="@color/app_theme"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/signAssessor"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/sign_student"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30sp"
        android:background="@drawable/sign_fill_border"
        android:gravity="center"
        android:fontFamily="@font/roboto_bold_font"
        android:text="@string/sign_in_assessor"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15sp"
        android:gravity="center_horizontal">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:textColor="@color/background_color"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
