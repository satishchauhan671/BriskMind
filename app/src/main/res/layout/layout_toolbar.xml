<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme"
    android:minHeight="?android:actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_margin_10dp"
        android:layout_toStartOf="@+id/actionBtnLay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/assistance_technician_cctv"
            android:textColor="@color/white"/>


        <TextView
            android:id="@+id/paperTimerTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_01_57_00"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionBtnLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

    <ImageView
        android:id="@+id/recordView"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_video_record"
        android:layout_marginEnd="@dimen/activity_margin_10dp"
        android:contentDescription="@string/todo" />


        <TextView
            android:id="@+id/submitTestTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_test"
            android:paddingStart="@dimen/activity_margin_3dp"
            android:paddingEnd="@dimen/activity_margin_3dp"
            android:paddingTop="@dimen/activity_margin_8dp"
            android:paddingBottom="@dimen/activity_margin_8dp"
            android:background="@drawable/btn_bg_theme_dark_rounded"
            android:textColor="@color/teal_200"
            android:layout_marginEnd="@dimen/activity_margin_10dp"/>

        <ImageView
            android:id="@+id/instructionDialogIv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_dots_more"
            android:layout_marginEnd="@dimen/activity_margin_10dp"
            android:contentDescription="@string/todo" />

    </LinearLayout>

</RelativeLayout>