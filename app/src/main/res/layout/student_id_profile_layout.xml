<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>


    </data>

    <FrameLayout
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/activity_margin_20dp"
                        android:layout_marginEnd="@dimen/activity_margin_20dp"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/aadhar_front"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/aadhar_back"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/activity_margin_5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/firstmeterimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/cameraimgbackground"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/meterimageoriginal1"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/meterimage1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_camera_new" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/activity_margin_5dp"
                                    android:layout_weight="1"
                                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                                    app:cardElevation="0dp">

                                    <LinearLayout
                                        android:id="@+id/secondmeterimage"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/cameraimgbackground"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:id="@+id/meterimageoriginal2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:id="@+id/meterimage2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/ic_camera_new" />


                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/tap_launch_camera"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/tap_launch_camera"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_30dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:layout_marginRight="@dimen/activity_margin_20dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/student_profile_image"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/activity_margin_20dp"
                                android:layout_width="200dp"
                                android:layout_height="160dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:cardElevation="0dp"
                                    app:cardCornerRadius="@dimen/activity_margin_15dp"
                                    android:layout_marginEnd="@dimen/activity_margin_5dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:background="@drawable/cameraimgbackground">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:scaleType="centerCrop"
                                            android:visibility="gone" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@drawable/ic_camera_new"
                                            android:scaleType="centerCrop" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="@dimen/activity_margin_10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:textSize="@dimen/activity_margin_12dp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/gray_text"
                                    android:text="@string/tap_launch_camera"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginStart="@dimen/activity_margin_20dp"
                        android:layout_marginEnd="@dimen/activity_margin_20dp"
                        android:orientation="vertical"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="24dp"
                            android:gravity="center"
                            android:text="@string/submit_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:id="@+id/buttonLoginNow"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/activity_margin_60dp"
                            android:background="@drawable/btn_bg_rounded"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="@dimen/activity_margin_20dp"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="356dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingStart="16dp"
                                android:text="@string/savenext"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>



                </RelativeLayout>
            </ScrollView>




        </RelativeLayout>

    </FrameLayout>
</layout>