<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/activity_margin_5dp"
    android:paddingTop="@dimen/activity_margin_10dp"
    android:paddingEnd="@dimen/activity_margin_5dp">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardMaxElevation="@dimen/activity_margin_10dp"
            app:cardCornerRadius="@dimen/activity_margin_15dp">

            <LinearLayout
                android:padding="@dimen/activity_margin_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingTop="@dimen/activity_margin_2dp"
                    android:text="Assistant Tecnician CCTV Theory"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".7"
                        android:maxLines="3"
                        android:paddingTop="@dimen/activity_margin_1dp"
                        android:text="Theory Test Status"
                        android:textAllCaps="false"
                        android:textColor="@color/gray_text"
                        android:textSize="@dimen/text_size_13sp" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1.3"
                        android:maxLines="3"
                        android:paddingTop="@dimen/activity_margin_1dp"
                        android:text="Start"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_13sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:id="@+id/buttonLoginNow"
                    android:layout_width="@dimen/activity_margin_100dp"
                    android:layout_height="@dimen/activity_margin_60dp"
                    android:background="@drawable/btn_bg_green_rounded"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/starttest"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_marginTop="@dimen/activity_margin_10dp"
                    android:background="@color/gray_text"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


</LinearLayout>
