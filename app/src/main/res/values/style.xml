<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme">
        <item name="colorAccent">@color/background_color</item>
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay">
    </style>
    <style name="AppTheme.TranslucentStatusBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme_WithActionBar">
        <item name="colorAccent">@color/background_color</item>
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
    </style>

    <declare-styleable name="ViewFinderBackground">
        <attr name="backgroundColor" format="color" />
    </declare-styleable>


    <style name="toolbarstyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="CustomDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="progressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:colorAccent">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/app_theme</item>
        <item name="android:textColor">@color/color_c2ccd9</item>
    </style>
</resources>